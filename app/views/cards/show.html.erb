<div class="row">
  <div class="small-4 large-4 columns">
		<img src="https://s3-eu-west-1.amazonaws.com/mtgdb-production/<%= @card.magic_set.code.downcase %>/<%= CGI.escape(@card.name) %>.full.jpg" />
  </div>
  <div class="small-8 large-8 columns">
		<table>
		  <tbody>
		    <tr>
		      <td>Name</td>
		      <td><%= @card.name %></td>
		    </tr>
		    <% if @card.magic_set %>
		    <tr>
		    	<td>Set</td>
		    	<td><%= @card.magic_set.name %> <i class="ss ss-<%= @card.magic_set.code.downcase %> ss-2x ss-<%= @card.rarity.downcase %>"></i></td>
		    </tr>
		    <% end %>
		    <tr>
		      <td>Mana Cost</td>
		      <td><%= mana_cost_to_icons(@card.mana_cost).html_safe %></td>
		    </tr>
		    <tr>
		      <td>Type</td>
		      <td><%= @card.type_of_card %></td>
		    </tr>
		    <tr>
		    	<td>Text</td>
		    	<td><%= @card.text %></td>
	    	</tr>
	    	<% if @card.flavor %>
	    	<tr>
		    	<td>Flavor</td>
		    	<td><%= @card.flavor %></td>
	    	</tr>
	    	<% end %>
	    	<tr>
	    		<td>Rarity</td>
	    		<td><%= @card.rarity %></td>
	    	</tr>
	    	<tr>
	    		<td>Artist</td>
	    		<td><%= @card.artist %></td>
	    	</tr>
	    	<% if @also_seen_in.any? %>
	    	<tr>
	    		<td>Also seen in:</td>
	    		<td>
	    			<% @also_seen_in.each do |magic_card| %>
	    				<%= link_to card_path(magic_card) do %>
	    					<i class="ss ss-<%= magic_card.magic_set.code.downcase %> ss-2x ss-common"></i>
	    				<% end %>
	    			<% end %>
	    		</td>
	    	</tr>
	    	<tr>
	    	<% end %>
		  </tbody>
		</table>

		<p>This card has restrictions in the following formats:</p>
		<table>
		  <thead>
		    <tr>
		      <th>Format</th>
		      <th>Legality</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @card.legalities.each do |legality| %>
		    <tr>
		      <td><%= legality['format'] %></td>
		      <td><%= legality['legality'] %></td>
		    </tr>
		    <% end %>
		  </tbody>
		</table>
  </div>
</div>
